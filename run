#! /bin/bash -e

clear

. config || {
    cat << EOF
There's no config file in the current directory.
Please create it (see config.sample).

EOF
    exit 1
}

export device mount_dir
export logfile
export runs
export iosched_exclude benchmark_exclude
export io_size_ratio sysbench_lua
export records_num trans_num
export fsbench_utils_dir=$PWD/fsbench-utils

mkdir -p `dirname ${logfile}`


cleanup()
{
    umount "${mount_dir}" &> /dev/null
}

get_result_name()
{
    result=`readlink -m "${result_dir}/${index}/${fs_name}/${encryption}-${iosched_name}-${benchmark_name}"`
	export result
}

run_single()
{
    trap cleanup EXIT

    echo -e "\n${encryption}/${fs_name}/${iosched_name}/${benchmark_name}(run${index})"
    get_result_name

    # This prevents running again a test, so if we have a crash, we don't run
    # the completed tests again
    # That's why we didn't add timestamps in results
    [ -f ${result} ] && return

    ${fs} prepare
    ${iosched} prepare
    mkdir -p `dirname ${result}`
    echo 3 > /proc/sys/vm/drop_caches
    ${benchmark} run
    ${fs} cleanup
}

run_single_dmcrypt()
{
    echo -e "\n${encryption}/${fs_name}/${iosched_name}/${benchmark_name}(run${index})"
    get_result_name

    [ -f "${result}" ] && return

    # Save original device name to prevent changing common 
    # in fs/iosched/benchmark
    orig_device=$device
    echo -n "benchmark" | cryptsetup --cipher aes-xts-plain64\
        --key-size 256 --hash sha256 \
        --iter-time 2000 --use-urandom\
        luksFormat ${orig_device} -
    echo -n "benchmark" | cryptsetup open ${orig_device} dmcrypt_device
    device="/dev/mapper/dmcrypt_device"
    ${iosched} prepare
    ${fs} prepare
    mkdir -p `dirname ${result}`
    echo 3 > /proc/sys/vm/drop_caches
    ${benchmark} run
    ${fs} cleanup
    cryptsetup close dmcrypt_device
    device=${orig_device}   # Restore device
}

run_single_fscrypto()
{
    echo -e "\n${encryption}/${fs_name}/${iosched_name}/${benchmark_name}(run${index})"
    get_result_name

    [ -f "${result}" ] && return

    ${iosched} prepare
    ${fs} prepare
    mkdir -p `dirname ${result}`
    echo 3 > /proc/sys/vm/drop_caches

    ### Add fscrypt command here for the mount point ###
    fscrypt setup --quiet --force
    fscrypt setup ${mount_dir} --quiet
    orig_mount_dir=$mount_dir
    mount_dir="$mount_dir/encrypt_dir"
    mkdir -p $mount_dir
    echo "benchmark" | fscrypt encrypt ${mount_dir} --quiet\
    --user=root --source=custom_passphrase --name="Super Secret"

    ${benchmark} run
    mount_dir=$orig_mount_dir
    fscrypt purge ${mount_dir} --quiet --force --user=root
    ${fs} cleanup
}

run_single_ecryptfs()
{
   echo -e "\n${encryption}/${fs_name}/${iosched_name}/${benchmark_name}(run${index})"
    get_result_name

    [ -f ${result} ] && return

    ${iosched} prepare
    ${fs} prepare
    mkdir -p `dirname ${result}`
    echo 3 > /proc/sys/vm/drop_caches

    ecryptfs_sig=$(printf "%s" "benchmark" | ecryptfs-add-passphrase \
                | grep -oE "[[[:alnum:]]+]" | grep -oE "[[:alnum:]]+")
    mount -i -t ecryptfs \
        -o ecryptfs_sig=${ecryptfs_sig},ecryptfs_fnek_sig=${ecryptfs_sig},ecryptfs_cipher=aes,ecryptfs_key_bytes=32\
        ${mount_dir} ${mount_dir}
    ${benchmark} run
    umount ${mount_dir}

    ${fs} cleanup
}

run()
{
	echo -e "##########$(date)##########\n" > $logfile

	for index in $(seq 1 ${runs:-1}); do
		for iosched in iosched/* ; do
			[ -x "${iosched}" ] && "${iosched}" use || continue
			iosched_name=`basename ${iosched}`

			for benchmark in benchmark/* ; do
				[ -x "${benchmark}" ] && "${benchmark}" use || continue
				benchmark_name=`basename ${benchmark}`
	
				for fs in fs/*/* ; do
					[ -x "${fs}" ] || continue
					fs_name=`basename ${fs}`

                    export encryption="none"
					run_single
				done
			done
		done
	done
}

run_encrypted()
{
	echo -e "##########$(date)##########\n" > $logfile

	for index in $(seq 1 ${runs:-1}); do
		for iosched in iosched/* ; do
			[ -x "${iosched}" ] && "${iosched}" use || continue
			iosched_name=`basename ${iosched}`

            for fs in fs/*/* ; do
                [ -x "${fs}" ] || continue
                fs_name=`basename ${fs}`
                trap cleanup EXIT

                for benchmark in benchmark/* ; do
                    [ -x "${benchmark}" ] && "${benchmark}" use || continue
                    benchmark_name=`basename ${benchmark}`

                    # none
                    export encryption="none"
                    run_single

                    # dm-crypt
                    encryption="dmcrypt"
                    run_single_dmcrypt

                    # fscrypto
                    encryption="fscryto"
                    run_single_fscrypto

                    # ecryptfs
                    encryption="ecryptfs"
                    run_single_ecryptfs

                done
			done
		done
	done
}


print_help()
{
    cat << EOF
Usage: run [help]

    run:    run benchmarks
    run_encrypted:   run benchmarks based on dm-crypt, ecryptfs, fscrypto
                     encryption methods
    show:   show the results of benchmarks
    run help:   this help
EOF
}

case "$1" in
    "")
        run
        ;;

    run_encrypted)
        run_encrypted
        ;;

	show)
		python fsbench-utils/show_benchmarks.py config
		;;

    help|*)
        print_help
        ;;

esac
